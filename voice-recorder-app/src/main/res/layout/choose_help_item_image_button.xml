<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/llContainer"
    android:padding="7dp">
    <com.cmg.android.bbcaccent.view.cardview.CircleCardView
        android:id="@+id/btnHelpImage"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="@color/app_purple"
        app:cardElevation="0dp"
        app:cardCornerRadius="6dp"
        android:layout_width="@dimen/help_item_image_size"
        android:layout_height="@dimen/help_item_image_size"
        android:foreground="@android:color/transparent"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:tint="@android:color/white"
            android:src="@drawable/p_tip_blue"/>
    </com.cmg.android.bbcaccent.view.cardview.CircleCardView>
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:textColor="@color/app_purple"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/help_item_text_size"
        android:text=""/>
</LinearLayout>