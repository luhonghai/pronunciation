<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/history_list_item_padding">
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:paddingEnd="5dp">
                <com.cmg.android.bbcaccent.view.AlwaysMarqueeTextView
                    android:id="@+id/txtWordItem"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_list_default_size"
                    android:textSize="@dimen/main_selected_word_size"
                    android:gravity="start|center_vertical"
                    android:textStyle="bold"
                    />

            </RelativeLayout>
            <TextView
                android:id="@+id/txtWordScore"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_list_default_size"
                android:textSize="@dimen/main_selected_word_size"
                android:gravity="center"
                android:textStyle="bold"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rlHistoryItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </RelativeLayout>
    </RelativeLayout>
    <com.cmg.android.bbcaccent.view.cardview.CircleCardView
        android:id="@+id/btnPlayItem"
        android:layout_width="@dimen/button_list_default_size"
        android:layout_height="@dimen/button_list_default_size"
        app:cardElevation="0dp"
        android:clickable="true"
        android:foreground="@android:color/transparent"
        app:cardBackgroundColor="@color/app_gray"
        android:stateListAnimator="@anim/lift_up"
        android:layout_marginLeft="@dimen/main_action_button_margin"
        android:layout_marginStart="@dimen/main_action_button_margin">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_play"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal|center_vertical"/>
    </com.cmg.android.bbcaccent.view.cardview.CircleCardView>
    <com.cmg.android.bbcaccent.view.cardview.CircleCardView
        android:id="@+id/btnRecordItem"
        android:layout_width="@dimen/button_list_default_size"
        android:layout_height="@dimen/button_list_default_size"
        app:cardElevation="0dp"
        android:clickable="true"
        android:foreground="@android:color/transparent"

        app:cardBackgroundColor="@color/app_gray"
        android:stateListAnimator="@anim/lift_up"
        android:layout_marginLeft="@dimen/main_action_button_margin"
        android:layout_marginStart="@dimen/main_action_button_margin">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_up"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal|center_vertical"/>
    </com.cmg.android.bbcaccent.view.cardview.CircleCardView>
</LinearLayout>