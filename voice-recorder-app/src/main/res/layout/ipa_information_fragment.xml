<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="40sp"
        android:text="@string/ipa_information"
        android:layout_marginBottom="30dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/btnRP"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        android:clickable="true"
        android:foreground="@android:color/transparent"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/app_aqua"
        android:layout_margin="15dp"
        android:stateListAnimator="@anim/lift_up"
        >
        <com.cmg.android.bbcaccent.view.AlwaysMarqueeTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:text="@string/ipa_rp"
            android:textColor="@android:color/white"
            android:layout_margin="5dp"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/btnVowels"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        android:clickable="true"
        android:foreground="@android:color/transparent"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/app_aqua"
        android:layout_margin="15dp"
        android:stateListAnimator="@anim/lift_up"
        >
        <com.cmg.android.bbcaccent.view.AlwaysMarqueeTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:text="@string/ipa_vowels"
            android:textColor="@android:color/white"
            android:layout_margin="5dp"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/btnConsonant"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        android:clickable="true"
        android:foreground="@android:color/transparent"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/app_aqua"
        android:layout_margin="15dp"
        android:stateListAnimator="@anim/lift_up"
        >
        <com.cmg.android.bbcaccent.view.AlwaysMarqueeTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:text="@string/ipa_consonant"
            android:textColor="@android:color/white"
            android:layout_margin="5dp"/>
    </android.support.v7.widget.CardView>
</LinearLayout>