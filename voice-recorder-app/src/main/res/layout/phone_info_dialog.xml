<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="240dp"
    android:layout_height="240dp"
    android:background="@drawable/rounded_corner_color_orange_dialog"
    android:id="@+id/content"
    >
    <RelativeLayout
        android:layout_weight="1.3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtPhonemeReal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|start"
                android:textSize="32sp"
                android:textColor="@android:color/white"
                android:text="É›"/>
            <TextView
                android:id="@+id/txtPhonemeScore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|end"
                android:textSize="32sp"
                android:textColor="@android:color/white"
                android:text="56%"/>
            </LinearLayout>
        </RelativeLayout>
    <RelativeLayout
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textSize="110sp"
            android:textColor="@android:color/white"
            android:text="EH"
            android:id="@+id/txtPhoneme" />
        </RelativeLayout>
    <RelativeLayout
        android:layout_weight="1.1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|start">
                <ImageButton
                    android:id="@+id/btnAudioPhoneme"
                    android:background="@null"
                    android:layout_width="@dimen/button_default_size"
                    android:layout_height="@dimen/button_default_size"
                    android:src="@drawable/p_audio_orange_rev"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:clickable="false"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|end">
                <ImageButton
                    android:id="@+id/btnGraph"
                    android:background="@null"
                    android:layout_width="@dimen/button_default_size"
                    android:layout_height="@dimen/button_default_size"
                    android:src="@drawable/p_graph_orange_rev"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:clickable="false"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>