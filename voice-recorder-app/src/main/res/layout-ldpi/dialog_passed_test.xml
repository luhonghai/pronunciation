<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/sl_background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/content_box"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Congratulations you passed"
                android:textSize="37sp"
                android:textColor="@android:color/black"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="200dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/berty_head_antialias_alpha"
                    />
                <com.cmg.android.bbcaccent.view.RecordingView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_height="0dp"
                    android:id="@+id/main_recording_view" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/btnShare"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_share_default"
            android:scaleType="fitXY"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"/>
    </RelativeLayout>

</FrameLayout>