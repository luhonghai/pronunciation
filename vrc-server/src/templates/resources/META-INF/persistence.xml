<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<!-- Persistence "unit" -->
	<persistence-unit name="VRC">
        <class>com.cmg.vrc.data.jdo.UserVoiceModel</class>
        <class>com.cmg.vrc.data.jdo.UserDevice</class>
        <class>com.cmg.vrc.data.jdo.User</class>
        <class>com.cmg.vrc.data.jdo.Security</class>
        <class>com.cmg.vrc.data.jdo.Usage</class>
        <class>com.cmg.vrc.data.jdo.AppDetail</class>
		<class>com.cmg.vrc.data.jdo.Feedback</class>
		<class>com.cmg.vrc.data.jdo.LicenseCode</class>
		<class>com.cmg.vrc.data.jdo.Admin</class>
		<class>com.cmg.vrc.data.jdo.LanguageModelVersion</class>
		<class>com.cmg.vrc.data.jdo.DictionaryVersion</class>
		<class>com.cmg.vrc.data.jdo.RecordedSentenceHistory</class>
		<class>com.cmg.vrc.data.jdo.RecordedSentence</class>
		<class>com.cmg.vrc.data.jdo.Transcription</class>
		<class>com.cmg.vrc.data.jdo.ClientCode</class>
		<class>com.cmg.vrc.data.jdo.LicenseCodeCompany</class>
		<class>com.cmg.vrc.data.jdo.PhonemeScoreDB</class>
		<class>com.cmg.lesson.data.jdo.WordCollection</class>
		<class>com.cmg.lesson.data.jdo.WordMappingPhonemes</class>
		<class>com.cmg.vrc.data.jdo.AcousticModelVersion</class>
		<class>com.cmg.lesson.data.jdo.Question</class>
		<class>com.cmg.lesson.data.jdo.WordOfQuestion</class>
		<exclude-unlisted-classes />
		<properties>
			<!-- ENABLE THESE FOR H2 -->
			<!--property name="javax.jdo.option.ConnectionURL" value="jdbc:h2:mem:nucleus1"/> 
				<property name="javax.jdo.option.ConnectionDriverName" value="org.h2.Driver"/> 
				<property name="javax.jdo.option.ConnectionUserName" value="sa"/> <property 
				name="javax.jdo.option.ConnectionPassword" value=""/> <property name="javax.jdo.option.Mapping" 
				value="h2"/ -->

			<!-- ENABLE THESE FOR HSQLDB -->
			<!--property name="javax.jdo.option.ConnectionURL" value="jdbc:hsqldb:mem:nucleus1"/> 
				<property name="javax.jdo.option.ConnectionDriverName" value="org.hsqldb.jdbcDriver"/> 
				<property name="javax.jdo.option.ConnectionUserName" value="sa"/> <property 
				name="javax.jdo.option.ConnectionPassword" value=""/> <property name="javax.jdo.option.Mapping" 
				value="hsql"/ -->

			<!-- ENABLE THESE FOR MySQL/MariaDB -->
			<property name="javax.jdo.option.ConnectionURL" value="${javax.jdo.option.ConnectionURL}" />
			<property name="javax.jdo.option.ConnectionDriverName"
				value="com.mysql.jdbc.Driver" />
			<property name="javax.jdo.option.ConnectionUserName" value="${javax.jdo.option.ConnectionUserName}" />
			<property name="javax.jdo.option.ConnectionPassword" value="${javax.jdo.option.ConnectionPassword}" />
			<property name="javax.jdo.option.Mapping" value="mysql" />

			<!-- ENABLE THESE FOR ODF -->
			<!--property name="javax.jdo.option.ConnectionURL" value="odf:file:tutorial.ods"/ -->

			<!-- ENABLE THESE FOR EXCEL -->
			<!--property name="javax.jdo.option.ConnectionURL" value="excel:file:tutorial.xls"/ -->

			<!-- ENABLE THESE FOR MONGODB -->
			<!--property name="javax.jdo.option.ConnectionURL" value="mongodb:/nucleus1"/ -->

			<!-- ENABLE THESE FOR HBASE -->
			<!--property name="javax.jdo.option.ConnectionURL" value="hbase:"/ -->

			<!-- ENABLE THESE FOR NEO4J -->
			<!--property name="javax.jdo.option.ConnectionURL" value="neo4j:testDB"/ -->
			<property name="datanucleus.IgnoreCache" value="true" />
			<property name="datanucleus.autoCreateSchema" value="true" />
			<property name="datanucleus.validateTables" value="false" />
			<property name="datanucleus.validateConstraints" value="false" />
			<property name="datanucleus.query.sql.allowAll" value="true" />
		</properties>
	</persistence-unit>

</persistence>
